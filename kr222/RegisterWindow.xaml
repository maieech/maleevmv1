<Window x:Class="kr222.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Регистрация" Height="350" Width="400">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Логин:" Grid.Row="0"/>
        <TextBox x:Name="txtLogin" Grid.Row="1" Margin="0,0,0,10"/>

        <TextBlock Text="Пароль:" Grid.Row="2"/>
        <PasswordBox x:Name="txtPassword" Grid.Row="3" Margin="0,0,0,10"/>

        <TextBlock Text="ФИО:" Grid.Row="4"/>
        <TextBox x:Name="txtFullName" Grid.Row="5" Margin="0,0,0,10"/>

        <TextBlock Text="Телефон:" Grid.Row="6"/>
        <TextBox x:Name="txtPhone" Grid.Row="7" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnRegister" Content="Зарегистрировать" Width="120" Margin="5" Click="btnRegister_Click"/>
            <Button x:Name="btnCancel" Content="Отмена" Width="80" Margin="5" Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>